{{page-title "AppHome"}}

<div class="logo">
    <h4>Welcome {{this.user}}</h4>
</div>
<div class="search">
    <i class="fa fa-search" {{action 'searchUser'}}></i>
    <input type="text" placeholder="search name" id="search-box">
</div>
<div id="menu" {{on 'mouseenter' this.toggleMenu}} {{on 'mouseleave' this.toggleMenu}}>
    <i class="fa fa-list" ></i>
    {{#if this.menu}}
        <div class="menu">
            <LinkTo @route="add-contact" >Add contact</LinkTo>
            <LinkTo @route="log-out" class="logOut">Log Out</LinkTo><br>
        </div>
    {{/if}}
</div>
<div class="contacts">
    {{!-- {{#each this.datas as |json|}}
