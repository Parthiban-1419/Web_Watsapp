            <p id="name">{{json.friend}}</p> 
        </div>
    {{/each}} --}}
</div>
<div class="container">
</div>
{{#if this.keypad}}
    <div class="keypad"><br>
        <center>
            <input type="text" class="keyboard" id="message" placeholder="Type a message..." {{on "keypress" (fn this.typing this)}} >
            <i class="fa fa-send"  {{action 'sendMessage'}}></i>
        </center>
    </div>
{{/if}}

